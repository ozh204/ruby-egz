<h1>Użytkownicy</h1>

<%= link_to 'Nowy użytkownik', new_user_path %>

<%= form_tag destroy_multiple_users_path, method: :delete do %>
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-md-1"></th>
                <th class="col-md-6">Nazwa</th>
                <th class="col-md-4">Email</th>
                <th class="col-md-1" colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @users.each do |u| %>
                <tr>
                    <td><%= check_box_tag "users[]", u.id %></td>
                    <td><%= u.name %></td>
                    <td><%= u.email %></td>
                    <td><%= link_to 'Szczegóły', user_path(u) %></td>
                    <td><%= link_to 'Edytuj', edit_user_path(u) %></td>
                    <td><%= link_to 'Usuń', user_path(u),
                            method: :delete,
                            data: { confirm: 'Czy napewno chcesz usunąć tego użytkownika?' } %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
<%= submit_tag "Usuń zaznaczone" %>
<% end %>